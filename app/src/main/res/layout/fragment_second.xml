<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondFragment">

        <TextView
            android:id="@+id/SubtractionTV"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="41dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/multiplicationTV"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/multiplicationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="41dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/divisionTV"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/divisionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="375dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/additionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="41dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/SubtractionTV"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/addTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="41dp"
            android:text="Addition  :"
            app:layout_constraintBottom_toTopOf="@+id/subTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/subTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="44dp"
            android:text="Subtraction  :"
            app:layout_constraintBottom_toTopOf="@+id/multiTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/multiTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="44dp"
            android:text="Multiplication  :"
            app:layout_constraintBottom_toTopOf="@+id/divTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/divTextView"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="374dp"
            android:text="Division  :"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>